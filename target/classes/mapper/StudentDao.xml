<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.demo.mapper.StudentDao">

    <resultMap id="BaseResultMap" type="com.example.demo.model.Student">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="score" property="score"/>
    </resultMap>

    <!--<sql id="Base_Column_List">-->
        <!--tec_id, tec_name, tec_age-->
    <!--</sql>-->

    <select id="getStudentInfoById" resultMap="BaseResultMap" parameterType="int">
        select id, name, score from stu where id = #{id}
    </select>

    <select id="getStudentInfoByIdAndName" resultMap="BaseResultMap">
        select id, name, score from stu where id =#{id} and name = #{name}
    </select>

    <insert id="addStudent" useGeneratedKeys="true" keyProperty="id" parameterType="com.example.demo.model.Student">
        insert into stu(name, score) values(#{name}, #{score})
    </insert>
</mapper>
